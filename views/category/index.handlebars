<h4>Categorias: </h4>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>{{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/categories/{{slug}}">Ver posts</a>
        </div>
    </div>

{{else}}
    <h4 class="mt-4">Nenhum post registrado :(</h4>
{{/each}}
